{
	"name": "used-car-market",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types src/worker-configuration.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:drop": "drizzle-kit drop",
		"db:migrate:local": "wrangler d1 execute DB --local",
		"db:studio:local": "drizzle-kit studio",
		"db:migrate:stg": "cross-env ENVIRONMENT=stg drizzle-kit migrate",
		"db:studio:stg": "cross-env ENVIRONMENT=stg drizzle-kit studio",
		"db:migrate:prod": "cross-env ENVIRONMENT=prod drizzle-kit migrate",
		"db:studio:prod": "cross-env ENVIRONMENT=prod drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251224.0",
		"@libsql/client": "^0.15.15",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^25.0.3",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.31.8",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"wrangler": "^4.56.0"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1"
	}
}